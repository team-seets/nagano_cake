<div class="container">
  <div calss="row">
  	<div class="col-xs-8"><br><br><br><br>
        <h3 class="head-line title_h2">　　　　注文履歴一覧</h3><br>
					<table class="table table-hover table-bordered  table-condensed">
						<thead>
							<tr>
								<th>注文日</th>
								<th>配送先</th>
								<th>注文商品</th>
								<th>支払金額</th>
								<th>ステータス</th>
								<th>注文詳細</th>
							</tr>
						</thead>
						<tbody>
							<% @orders.each do |order| %>
							<tr>
								<th><%= order.created_at.strftime('%Y/%m/%d') %></th>
								<td>
									<%= order.postal_code %><br>
									<%= order.address %><br>
									<%= order.name %>
								</td>
								<td></td>
								<td></td>
								<td><%= order.order_status %></td>
								<td><button class="btn btn-default">表示する</button></td>
							</tr>
							<% end %>
						</tbody>
					</table>

			</div>
    </div>
  </div>
