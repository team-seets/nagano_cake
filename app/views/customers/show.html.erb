  <html>
    <body>
      <div class="container">
        <div class="row">
          <div class="col-xs-3">
            <h2>User info</h2>
            <table>
              <tbody>
                <%= form_with model: @user, local:true do |f| %>
                  <tr>
                    <th>氏名(姓)<br>
                    <%= f.text_field :last_name %></th>
                  </tr>
                  <tr>
                    <th><br>氏名(名)<br>
                    <%= f.text_field :first_name %></th>
                  </tr>
                  <tr>
                    <th><br>氏名(姓カナ)<br>
                    <%= f.text_field :last_name_kana %></th>
                  </tr>
                  </tr>
                    <th><br>氏名(名カナ)<br>
                    <%= f.text_field :first_name_kana %></th>
                  </tr>
                  <tr>
                    <th><br>郵便番号<br>
                    <%= f.text_field :postal_code %></th>
                  </tr>
                  <tr>
                    <th><br>住所<br>
                    <%= f.text_field :address %></th>
                  </tr>
                  </tr>
                    <th><br>電話番号<br>
                    <%= f.text_field :telephone_number %></th>
                  </tr>
                  <tr>
                    <th><br>メールアドレス<br>
                    <%= f.text_field :email %></th>
                  </tr>
                  <tr>
                    <th><br><%= link_to '編集', edit_customer_path, class: "col-xs-12 btn btn-default glyphicon" %></th>
                  </tr>
                  <tr>
                   <th><br><%= link_to "退会する", class: "destroy-user", method: :delete %></th>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </body>
  </html>