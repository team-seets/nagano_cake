  <html>
    <body>
      <h2>ユーザー詳細ページ</h2>
      <div class="container">
        <div class="row">
          <div class="col-xs-3">
            <h2>User info</h2>
            <table class="table">
              <tbody>
                <tr>
                  <% @users.each do |user| %>
                  <div class="box">
                      <label for="user_name">氏名(姓)</label>
                      <%= f.text_field :last_name %>
                    </div>
                    <div class="box">
                      <label for="user_name">会員氏名(名)</label>
                      <%= f.text_field :first_name %>
                    </div>
                    <div class="box">
                      <label for="user_name">氏名(姓カナ)</label>
                      <%= f.text_field :last_name_kana %>
                    </div>
                    <div class="box">
                      <label for="user_name">氏名(名カナ)</label>
                      <%= f.text_field :first_name_kana %>
                    </div>
                    <div class="box">
                      <label for="user_name">郵便番号</label>
                      <%= f.text_field :postal_code %>
                    </div>
                    <div class="box">
                      <label for="user_name">住所</label>
                      <%= f.text_field :address %>
                    </div>
                     <div class="box">
                      <label for="user_name">電話番号</label>
                      <%= f.text_field :telephone_number %>
                    </div>
                     <div class="box">
                      <label for="user_name">メールアドレス</label>
                      <%= f.text_field :email %>
                    </div>
                     <div class="box">
                      <label for="user_name">会員ステータス</label>
                      <%= f.text_field :is_deleted %>
                    </div>
                  <% end %>
                <tr>
                  <th>introduction</th>
                </tr>
                <tr>
                  <th><%= link_to '編集', edit_customer_path, class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></th>
                </tr>
                <tr>
                 <th><%= link_to "退会する", class: "destroy-user",method: :delete %></th>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </body>
  </html>