<div class="container">
  <div class="col-xs-offset-1 col-xs-11"><br><br><br><br>
    <h2>注文情報入力</h2>
        <%= form_with model: @order, url: complete_path, method: :get, local: true  do |f| %>
          <h4><b>支払い方法</b></h4>
            <label><%= f.radio_button :payment_methods, "クレジットカード", checked: true %>クレジットカード</label><br>
            <label><%= f.radio_button :payment_methods, "銀行振込" %>銀行振込</label>
          <h4><b>お届け先</b></h4>
            <label><%= f.radio_button :address, "address", checked: true %>ご自身の住所</label><br>
            <%= "#{current_customer.postal_code} #{current_customer.address}" %>
            <br>
            <%= "#{current_customer.first_name} #{current_customer.last_name}" %>
          <div class="form-check">
            <label><%= f.radio_button :address, checked: true %>登録済住所から選択</label><br>
          </div>
          <div class="input-group">
	          <input type="text" class="form-control" placeholder="テキスト入力欄">
	          <span class="input-group-btn">
		        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">

      			<span class="caret"></span>
		        </button>
	          	<ul class="dropdown-menu" role="menu">
			          <li><a href="#">リンクのリスト１</a></li>
			          <li><a href="#">リンクのリスト２</a></li>
			          <li><a href="#">リンクのリスト３</a></li>
		          </ul>
	          </span>
          </div>
          <label><%= f.radio_button :address, "新しいお届け先" %>新しいお届け先</label>
            <div class="field form-group col-xs-11">
              <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-4 control-label" %>
              <%= f.text_field :postal_code, class: "col-sm-3 form-control-static postal_code" %>
            </div>
            <div class="field form-group col-xs-11">
              <%= f.label :"住所", class: "col-sm-4 control-label" %>
              <%= f.text_field :address, class: "col-sm-8 form-control-static address" %>
            </div>
            <div class="field form-group col-xs-11">
              <%= f.label :"宛名", class: "col-sm-4 control-label" %>
              <%= f.text_field :name, class: "col-sm-3 form-control-static postal_code" %>
            </div>
          </div>
          <%= f.submit "確認画面へ進む", class: "btn btn-primary col-xs-4 col-xs-offset-1" %>
        <% end %>
			</div>
    </div>
  </div>
