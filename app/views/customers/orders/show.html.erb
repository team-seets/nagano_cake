<div class="container">
        <div class="col-xs-5"><br>
          <h2>注文履歴詳細</h2>
        </div>
      </div>
      <div class="container">
        <table>
          <tr>
            <td><h3>注文情報</h3></td>
          </tr>
        </table>
            <table class="table table-bordered">
            <tr>
              <th>注文日</th>
              <th><%= @orders.created_at.strftime('%Y/%m/%d') %></th></th>
            <tr>
              <th>配送先</th>
              <th><%= @orders.postal_code %><%= @orders.address %><br></th>
            </tr>
            <tr>
              <th>支払方法</th>
              <th><%= @orders.payment_methods %></th>
            </tr>
            <tr>
              <th>ステータス</th>
              <th><%= @orders.status %></th>
            </tr>
            </table>
      </div>
      <div class="col-xs-7">
        <table>
          <tr>
            <td><h3>請求情報</h3></h3></td>
          </tr>
        </table>
            <table class="table table-bordered">
            <tr>
              <th>商品合計</th>
              <th><%= @totalprice.to_s(:delimited) %></th></th></th>
            <tr>
              <th>配送料</th>
              <th><%= 800 %><br></th>
            </tr>
            <tr>
              <th>ご請求額</th>
              <th><%= (@orders.total_payment + 800).to_s(:delimited)%></th>
            </tr>
            </table>
            <table class="table table-hover table-bordered  table-condensed">
						<thead>
							<tr>
								<th>商品</th>
								<th>単価(税込)</th>
								<th>個数</th>
								<th>小計</th>
							</tr>
						</thead>
						<tbody>
							<% @cart_products.each do |cart_product| %>
							<tr>
								<th><%= cart_product.product.name%></th></th>
								<td><%= cart_product.product.price %></td></td>
								<td><%= cart_product.quantity %></td></td>
								<td><%= (cart_product.product.price * cart_product.quantity).to_s(:delimited) %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
</div>