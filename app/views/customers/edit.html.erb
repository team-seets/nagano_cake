 <body>
    <div class="container">
      <h2>
        ユーザー情報
      </h2>

      <%= form_with model: @user, local:true do |f| %>
        <div class="box">
          <label for="user_name">氏名(姓)</label>
          <%= f.text_field :last_name %>
        </div>
        <div class="box">
          <label for="user_name">会員氏名(名)</label>
          <%= f.text_field :first_name %>
        </div>
        <div class="box">
          <label for="user_name">氏名(姓カナ)</label>
          <%= f.text_field :last_name_kana %>
        </div>
        <div class="box">
          <label for="user_name">氏名(名カナ)</label>
          <%= f.text_field :first_name_kana %>
        </div>
        <div class="box">
          <label for="user_name">郵便番号</label>
          <%= f.text_field :postal_code %>
        </div>
        <div class="box">
          <label for="user_name">住所</label>
          <%= f.text_field :address %>
        </div>
         <div class="box">
          <label for="user_name">電話番号</label>
          <%= f.text_field :telephone_number %>
        </div>
         <div class="box">
          <label for="user_name">メールアドレス</label>
          <%= f.text_field :email %>
        </div>
        <div class="box">
          <%= f.submit 'Update User' %>
        </div>
      <% end %>
    </div>
  </body>
