<div class="row2">
	<h3>
    ショッピングカート<%= link_to 'カートを空にする',  destroy_all_path, method: :delete, class: "btn btn-danger" %>
  </h3>
  <table class="table table-bordered">
	<thead>
		<tr>
			<th>商品名</th>
			<br>
			<br>
			<br>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
    <% @cart_product.each do |cart_product| %>
      <tr>
        <th><%= attachment_image_tag cart_product.product, :image, size:'100x70' %><%= cart_product.product.name %></th>
    	<td><%= cart_product.product.price %></td>
    	<td><%= form_with model: cart_product, url:cart_product_path(cart_product), local:true do |f| %>
    	      <%= f.text_field :quantity %>
    	      <%= f.submit "変更", class:"btn btn-primary" %>
    	     <% end %>
    	</td>
    	<td><%= (cart_product.product.price * cart_product.quantity).to_s(:delimited) %></td>
    	<td><%= link_to '削除する', cart_product_path(cart_product.id), class: "btn btn-danger" ,method: :delete%></td>
      </tr>
    <% end %>	
      
  </tbody>
  </table>
  <div class="btn11">
    <%= link_to '買い物を続ける', products_path, class: "btn btn-primary" %><br><br><br>
    <p>合計金額<%= @totalprice %></p>
	</div>
  <%= link_to '情報入力に進む', new_order_path, class: "btn btn-success" %>
  
</div>