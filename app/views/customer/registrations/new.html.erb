<div class="row">
  <div class="col-xs-offset-1 col-xs-11"><br><br><br>
    <h4><span style="background-color: #afeeee">新規会員登録</span></h4>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group col-xs-12">

    <%= f.label :名前（姓）%>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    <%= f.label :（名）%>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>
  <div class="field form-group col-xs-12">
    <%= f.label :フリガナ（セイ）%>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    <%= f.label :（メイ）%>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  </div>
  <div class="field form-group col-xs-12">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field form-group col-xs-12">
    <%= f.label :郵便番号（ハイフンなし）%>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>
   <div class="field form-group col-xs-12">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
  <div class="field form-group col-xs-12">
    <%= f.label :電話番号（ハイフンなし）%>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>
  <div class="field form-group col-xs-12">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>（<%= @minimum_password_length %>文字以上）</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :パスワード（確認用）%>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>


  <p><%= f.submit "新規登録", class: 'btn btn-success active' %></p>

<% end %>
<div class="field form-group col-xs-12">
<br>
<h4><span style="background-color: #afeeee">既に登録済みの方</span></h4>
<h5><%= render "devise/shared/links" %>からログインしてください。</h5>
</div>
    </div>
  </div>
