<html>
    <body>
      <div class="container">
        <table>
          <tr>
            <td><h3><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h3></td><br><br><br><br>
          <tr>
        </table>
        <table class="table table-bordered">
          <%= form_with model:@customer, url: admins_end_user_path(@customer), local:true do |f| %>
            <div class="field form-group col-xs-12">
              <%= f.label :会員ID %>
              <%= @customer.id %>
            </div>
            <div class="field form-group col-xs-12">
              <%= f.label :名前（姓）%>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
              <%= f.label :（名）%>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
            </div>
            <div class="field form-group col-xs-12">
              <%= f.label :フリガナ（セイ） %>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
              <%= f.label :（メイ）%>
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
            </div>
            <div class="field form-group col-xs-12">
              <%= f.label :メールアドレス%>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <div class="field form-group col-xs-12">
              <%= f.label :郵便番号（ハイフンなし）%>
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
            </div>
             <div class="field form-group col-xs-12">
              <%= f.label :住所%>
              <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
            </div>
            <div class="field form-group col-xs-12">
              <%= f.label :電話番号（ハイフンなし）%>
              <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
            </div>
            <div class="field form-group col-xs-12">
              <%= f.label :会員ステータス %>
            </div>
            <div class="container">
              <%= f.submit '変更を保存する', class: "btn btn-primary" %>
            </div>
          <% end %>
        </table>
      </div>
    </body>
  </html>