<div class="row">
  <div class="col-xs-offset-1 col-xs-11"><br><br><br><br>
    <h2>注文履歴一覧</h2>
      <div class="col-xs-6 col-xs-offset-1">
        <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr class="info">
            <th>購入日時</th></th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="text-left"><%= order.created_at %></td>
              <td class="order-td"><%= full_name(order.customer) %></td>
              <td class="order-td"><%= order.order_details.count %></td>
              <td class="order-td"><%= order.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>