<div class="row">
  <div class="col-xs-offset-1 col-xs-11"><br><br><br><br>
    <h2>注文履歴詳細</h2>
      <div class="col-xs-6 col-xs-offset-1">
        <div class="container-fluid">
	        <div class="row">
		        <div class="col-md-4">購入者</div>
		        <div class="col-md-8"><%= @order.name %></div>

		        <div class="col-md-4">配送先</div>
		        <div class="col-md-8"><%= @order.postal_code %><%= @order.adress %><br><%= @order.name %></div>

		        <div class="col-md-4">支払い方法</div>
		        <div class="col-md-8"><%= @order.payment_methods %></div>

						<%= form_for(@order, url: admins_order_path, method: :patch) do |f| %>
		        <div class="col-md-4">注文ステータス</div>
		        <div class="col-md-8"><%= f.select :status, Order.order_statuses.keys, class: "status" %><%= f.submit '更新' ,class: "btn btn-primary" %></div>
		        <% end %>
	        </div>
        </div>
        <div class="col-xs-6 col-xs-offset-1">
        <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr class="info">
            <th>商品名</th></th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td class="order-td"><%= order_detail.product.name %></td>
              <td class="order-td"><%= order_detail.price %></td>
              <td class="order-td"><%= order_detail.amount %></td>
              <td class="order-td"></td>
              <td class="order-td"></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </div>
</div>
