<div class="row">
  <div class="col-xs-offset-1 col-xs-11"><br><br><br><br>
    <h2>注文履歴詳細</h2>
      <div class="col-xs-6 col-xs-offset-1">
        <div class="container-fluid">
	        <div class="row">
		        <div class="col-md-4">購入者</div>
		        <div class="col-md-8"><%= @order.name %></div>

		        <div class="col-md-4">配送先</div>
		        <div class="col-md-8">〒<%= @order.postal_code %><%= @order.address %><br><%= @order.name %></div>

		        <div class="col-md-4">支払い方法</div>
		        <div class="col-md-8"><%= @order.payment_methods %></div>

						<%= form_for(@order, url: admins_order_path, method: :patch) do |f| %>
		        <div class="col-md-4">注文ステータス</div>
              <%= f.select :status, Order.statuses.keys.map{ |k| k } %>
			            <td>
			            	<!--%= f.select :making_status, OrderDetail.making_statuses.keys, class: "making_status" %>-->
			            	<%= f.submit '更新'  ,class: "btn btn-warning" %>
			            </td>
			       <% end %>
		        <!--<div class="col-md-8">%= f.submit '更新' ,class: "btn btn-primary" %--></div>

	        </div>
        </div>
        <div class="col-xs-6 col-xs-offset-1">
        <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr class="info">
            <th>商品名</th></th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <% @order_detail.each do |order_detail| %>
            <tr>
              <td class="text-left">
                <%= order_detail.product.name %>
              </td>
              <td class="text-right">
                <%= order_detail.product.price %>
              </td>
              <td class="text-right">
                <%= order_detail.amount %>
              </td>
              <td class="text-right">
                <%= (order_detail.product.price * order_detail.amount).to_s(:delimited) %>
              </td>
              <td class="text-right">
                <%= form_for(order_detail, url: admins_order_detail_path(order_detail.id), method: :patch) do |f| %>
                  <%= f.select :making_status, OrderDetail.making_statuses.keys.map{ |k| k } %>
                    <td>
                      <%= f.submit '更新'  ,class: "btn btn-warning" %>
                    </td>
			          <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-5">
      <h4>
        <strong>商品合計</strong>　<%= @totalprice.to_s(:delimited) %>円
      </h4>
      <h4>
        <strong>送料</strong>      800円
      </h4>
      <h4>
        <strong>請求金額合計      <%= (@totalprice + 800).to_s(:delimited) %>円</strong>
      </h4>
    </div>
  </div>
</div>