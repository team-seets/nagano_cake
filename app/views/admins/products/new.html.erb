 <div class="row">
  <div class="col-xs-offset-2 col-xs-7"><br><br><br><br><br><br>
    <h4><span style="background-color: #afeeee">商品新規登録</span></h4>

    <%= form_with model:@product, url: admins_products_path, local:true do |f| %>
      <br><br><br><br><br>
      <div class="col-xs-4">
        <%= f.attachment_field :image %>
      </div>
      <div class="name1">
        <%= f.label :商品名   %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
      <br>
      <div class="introduction1">
        <%= f.label :商品説明   %>
        <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
      </div>
      <br>
      <div class="genre1">
        <%= f.label :ジャンル   %>
        <div class="btn-group">
          <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>
        </div>
      </div>
      <br>
      <div class="price1">
        <%= f.label :税抜価格   %>
        <%= f.text_field :price, autofocus: true, autocomplete: "price" %> 円
      </div>
      <br>
      <div class="status1">
        <%= f.label :販売ステータス  %>
        <div class="btn-group">
          <%= f.select :is_active, [['販売中','販売中'], ['売り切れ', '売り切れ'] ] , {include_blank: '-- 選択してください --'} %>
        </div>
      </div>
      <br>
      <div class="btn1">
        <%= f.submit "新規登録", class:"btn btn-primary" %>
      </div>

    <% end %>