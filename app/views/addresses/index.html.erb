  <div class="container">
    <div class="col-xs-3"><br>
      <h3>配送先登録/一覧</h3><br>
    </div>
  </div>

  <%= form_with model: @address, url: addresses_path, local: true do |f| %>
  <div class="container">
    <table>
      <tr>
        <th><%= f.label :郵便番号（ハイフンなし）%></th>
        <th><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></th>
      </tr>
      <tr>
        <th><%= f.label :住所%></th>
        <th><%= f.text_field :address, autofocus: true, autocomplete: "address" %></th>
      </tr>
      <tr>
        <th><%= f.label :宛名 %></th>
        <th><%= f.text_field :name, autofocus: true, autocomplete: "first_name" %></th>
      </tr>
      <tr>
        <th><%= f.submit '登録',class: "btn btn-primary" %></th>
      </tr>
    </table>
  </diV>
  <% end %><br>

  <div class="container">
    <table class="table table-bordered">
      <thead>
    		<tr>
    			<th>郵便番号</th>
    			<th>住所</th>
    			<th>宛名</th>
    			<th colspan="3"></th>
    		</tr>
  		</thead>
  		<tbody><br><br>
        <% @addresses.each do |address| %>
          <tr>
            <th><%= address.postal_code %></th>
            <th><%= address.address %></th>
            <th><%= address.name %></th>
            <th>
              <%= link_to "編集", edit_address_path(address.id), class: "btn btn-primary" %>
              <%= link_to "削除", address_path(address.id), method: :delete, "data-confirm" => "本当に消しますか？？", class: "btn btn-danger" %>
            </th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>



